<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回" />

    <EditText
        android:id="@+id/et_server_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="20dp"
        android:hint="rtsp://192.168.173.1:8554/live"
        android:inputType="none"
        android:lines="1"
        android:text="rtsp://admin:@192.168.110.3:554" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_server_path"
        android:layout_centerHorizontal="true"
        android:text="连接" />

    <TextView
        android:id="@+id/tv_tick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_connect"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="00:00.000"
        android:textColor="#000000"
        android:textSize="150sp" />

    <Button
        android:id="@+id/btn_start_tick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tick"
        android:layout_centerHorizontal="true"
        android:text="开始计时" />

</RelativeLayout>